{% extends "base.twig" %}
{% block content %}
	<section class="artco-list">
	<h1>ART-CO</h1>
	<p>This space is Dikeou Collectionâ€™s platform for Colorado artists to share
information about themselves and their work.</p><p> <a href="/artco-submission">Click here to participate</a></p>
		{% for post in posts %}
			<article>
				{% if post.get_field('slides') %}
				{% set img = TimberImage(post.get_field('slides')[0].image) %}
				<img class="preview" src="{{ img.get_src('event') }}">
				{% endif%}
				<h2><a href="/artco/{{post.post_name}}">{{ post.post_title }}</a></h2>
				<p>{{post.get_preview(25)}}</p>
			</article>
		{% endfor %}
	</section>
	
{% endblock %}